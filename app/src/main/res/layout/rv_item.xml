<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_marginTop="4sp"
        android:layout_marginLeft="2sp"
        android:layout_width="115sp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        android:paddingBottom="10sp"
        >

        <LinearLayout
            android:background="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="7sp">

            <LinearLayout
                android:id="@+id/best_comment_decorator"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#8FFD7D"
                android:visibility="visible"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crown"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/goldcrown" />

                <TextView
                    android:id="@+id/rankingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="응원댓글 1위"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/singerphoto"
                    android:layout_width="120sp"
                    android:layout_height="200sp"
                    android:src="@drawable/imphoto"
                    android:scaleType="centerCrop"
                    />


            </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/singername"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:text="임영웅"
                    android:textSize="18sp" />

   <RelativeLayout
       android:id="@+id/best_medal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="right"
       >
                <ImageView
                    android:layout_marginBottom="5sp"
                    android:layout_width="29sp"
                    android:layout_height="29sp"
                    android:src="@drawable/goldmedal1"/>
                <TextView
                    android:id="@+id/manyComment"


                    android:lineSpacingMultiplier="0.7"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:text="1 만\n달성"
                    android:textStyle="bold"
                    />
   </RelativeLayout>
</RelativeLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="5sp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="댓글" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_marginLeft="5sp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="100" />

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 개"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

